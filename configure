		--enable-universal)
			QC_ENABLE_universal="Y"
			shift
			;;

		--disable-growl)
			QC_DISABLE_growl="Y"
			shift
			;;

		--with-growl=*)
			QC_WITH_GROWL="${1#--with-growl=}"
			shift
			;;

