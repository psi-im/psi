	case "$1" in
		--prefix=*)
			PREFIX="${1#--prefix=}"
			shift
			;;

		--bindir=*)
			BINDIR="${1#--bindir=}"
			shift
			;;

		--datadir=*)
			DATADIR="${1#--datadir=}"
			shift
			;;

		--qtdir=*)
			EX_QTDIR="${1#--qtdir=}"
			shift
			;;

		--certstore-path=*)
			QC_CERTSTORE_PATH="${1#--certstore-path=}"
			shift
			;;

		--enable-qca)
			QC_ENABLE_qca="Y"
			shift
			;;

		--disable-openssl)
			QC_DISABLE_openssl="Y"
			shift
			;;

		--with-openssl-inc=*)
			QC_WITH_OPENSSL_INC="${1#--with-openssl-inc=}"
			shift
			;;

		--with-openssl-lib=*)
			QC_WITH_OPENSSL_LIB="${1#--with-openssl-lib=}"
			shift
