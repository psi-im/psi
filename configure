		--with-zlib-inc=*)
			QC_WITH_ZLIB_INC="${1#--with-zlib-inc=}"
			shift
			;;

		--with-zlib-lib=*)
			QC_WITH_ZLIB_LIB="${1#--with-zlib-lib=}"
			shift
