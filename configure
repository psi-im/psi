		--with-sasl-inc=*)
			QC_WITH_SASL_INC="${1#--with-sasl-inc=}"
			shift
			;;

		--with-sasl-lib=*)
			QC_WITH_SASL_LIB="${1#--with-sasl-lib=}"
			shift
